@model IEnumerable< PhoneStoreWeb.Models.tb_News>

<div class="blogs">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title">
                    <h2>Latest Blogs</h2>
                </div>
            </div>
        </div>
        <div class="row blogs_container">
            @foreach(var i in Model)
            {
            <div class="col-lg-4 blog_item_col">
                <div class="blog_item">
                    <di class="blog_background" style="background-image:url(~/Content/images/blog_1.jpg)"></di>
                    <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                        <h4 class="blog_title">@i.Title</h4>
                        <span class="blog_meta">@i.CreateBy</span>
                        <a class="blog_more" href="#">Read more</a>
                    </div>
                </div>
            </div>
            }
            
            
        </div>
    </div>
</div>
